rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users
    function isAuthed() {
      return request.auth != null;
    }

    // Check if user is a doctor
    function isDoctor() {
      return request.auth.token.role == 'doctor';
    }

    // Check if the user is reading/writing their own data
    function isOwner(resource) {
      return resource.data.patientId == request.auth.uid ||
             resource.data.uid == request.auth.uid;
    }

    // USERS
    match /users/{userId} {
      allow read: if isAuthed();
      allow write: if request.auth.uid == userId;
    }

    // APPOINTMENTS
    match /appointments/{id} {
      allow create: if isAuthed();
      allow read, update, delete: if isDoctor() || isOwner(resource);
    }

    // MEDICATIONS
    match /medications/{id} {
      allow create: if isAuthed();
      allow read, update, delete: if isOwner(resource) || isDoctor();
    }

    // SYMPTOMS
    match /symptoms/{id} {
      allow create: if isAuthed();
      allow read: if isOwner(resource) || isDoctor();
      allow delete: if isOwner(resource) || isDoctor();
    }

    // VITALS
    match /vitals/{id} {
      allow create: if isAuthed();
      allow read: if isOwner(resource) || isDoctor();
      allow delete: if isOwner(resource) || isDoctor();
    }
  }
}
