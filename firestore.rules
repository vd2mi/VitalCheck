rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users
    function isAuthed() {
      return request.auth != null;
    }

    // Check if user is a doctor by reading their user document
    function isDoctor() {
      return isAuthed() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }

    // Check if the user is reading/writing their own data
    function isOwner(resource) {
      return resource.data.patientId == request.auth.uid ||
             resource.data.uid == request.auth.uid;
    }

    // USERS
    match /users/{userId} {
      allow read: if isAuthed();
      allow write: if request.auth.uid == userId;
    }

    // APPOINTMENTS
    match /appointments/{id} {
      allow create: if isAuthed() && request.resource.data.patientId == request.auth.uid;
      allow read: if isAuthed() && (isDoctor() || isOwner(resource));
      allow update: if isAuthed() && (isDoctor() || isOwner(resource));
      allow delete: if isAuthed() && (isDoctor() || isOwner(resource));
    }

    // MEDICATIONS
    match /medications/{id} {
      allow create: if isAuthed() && request.resource.data.patientId == request.auth.uid;
      allow read, update, delete: if isAuthed() && (isOwner(resource) || isDoctor());
    }

    // SYMPTOMS
    match /symptoms/{id} {
      allow create: if isAuthed() && request.resource.data.patientId == request.auth.uid;
      allow read: if isAuthed() && (isOwner(resource) || isDoctor());
      allow delete: if isAuthed() && (isOwner(resource) || isDoctor());
    }

    // VITALS
    match /vitals/{id} {
      allow create: if isAuthed() && request.resource.data.patientId == request.auth.uid;
      allow read: if isAuthed() && (isOwner(resource) || isDoctor());
      allow delete: if isAuthed() && (isOwner(resource) || isDoctor());
    }
  }
}
